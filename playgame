from connectfour import *

def start():
    """Time to play a game of Connect Four!
    """

    g = Game()
    g.state()
    player1 = g.players[0]
    player2 = g.players[1]
    wins = [0, 0, 0]
    end = False

    while not end:
        while not g.finished:
            g.move()
        g.checkfours()
        g.state()

        if g.winner == player1:
            wins[0] += 1
        elif g.winner == player2:
            wins[1] += 1
        elif g.winner == None:
            wins[2] += 1

        printscore(player1, player2, wins)

